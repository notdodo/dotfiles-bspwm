[module/bluetooth]
type = custom/script
exec = ~/.config/rofi/rofi-bluetooth/rofi-bluetooth --status
interval = 1
click-left = ~/.config/rofi/rofi-bluetooth/rofi-bluetooth
label-foreground = #61afef
label-background = #2b2f37
label = %output%

###############################################################################

[module/agenda]
type = custom/script
; Show the next event and forget cache automatically every 60 minutes
exec = python3 ~/.config/i3-agenda/i3-agenda-src/i3_agenda/__init__.py -c ~/.config/i3-agenda/client_secret.json -ttl 10
; left click to launch Google Calendar
click-left = firefox https://calendar.google.com/calendar/u/0/r
; right click force update the cache, if for example you just added a new event
click-right = notify-send "syncing..." && python3 ~/.config/i3-agenda/i3-agenda-src/i3_agenda/__init__.py -c ~/.config/i3-agenda/client_secret.json --update && notify-send -t 2000 "sync finished"
interval = 60
label = %{F#61afef}ÔÅ≥%{F-} %{T5}%output%%{T-}

