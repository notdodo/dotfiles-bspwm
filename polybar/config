[module/spotify]
type = custom/script
interval = 1
format-prefix = "ÔÜº "
format = <label>
format-background = #2b2f37
format-foreground = #1db954
exec = python ~/.config/polybar/scripts/spotify.py -f '{play_pause} {song} - {artist} - {album}'
click-middle = playerctl --player=spotify play-pause 
click-left = playerctl --player=spotify previous 
click-right = playerctl --player=spotify next 

